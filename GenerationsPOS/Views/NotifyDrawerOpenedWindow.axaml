<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GenerationsPOS.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:GenerationsPOS.Views"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="150"
        Width="300" Height="150"
        x:Class="GenerationsPOS.Views.NotifyDrawerOpenedWindow"
        Title="Cash Drawer Opened"
        WindowStartupLocation="CenterOwner">

  <StackPanel VerticalAlignment="Center"
              Spacing="24">

    <TextBlock HorizontalAlignment="Center"
               Grid.Row="1">Cash Drawer has been opened</TextBlock>

    <Button HorizontalAlignment="Center">Ok</Button>
    
  </StackPanel>
  
</Window>
